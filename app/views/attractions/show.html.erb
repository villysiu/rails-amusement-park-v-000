<p><strong>Name:</strong> <%= @attraction.name %></p>
<p><strong>Total Number of Users:</strong> <%= @attraction.users.count %>
<p><strong>Ticket Requirement:</strong> <%= @attraction.tickets ||= 'N/A' %></p>
<p><strong>Height Requirement:</strong> <%= @attraction.min_height  ||= 'N/A' %> </p>
<p><strong>Nausea Rating:</strong> <%= @attraction.nausea_rating  ||= 'N/A' %> </p>
<p><strong>Happiness Rating:</strong> <%= @attraction.happiness_rating  ||= 'N/A' %> </p>

<% if current_user.admin %>
  <p><%= link_to 'Edit Attraction', edit_attraction_path %></p>
<% else %>
  <%= form_for(:ride, url: create_ride_path) do |f| %>

    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :attraction_id, :value => @attraction.id %>
    <%= f.submit "Go on this ride" %>
  <% end %>
<% end %>
<p><%= link_to 'Back', attractions_path %></p>