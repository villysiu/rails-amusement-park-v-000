<h1>Log in here</h1>

<%= form_with url: signin_path, method: :post do |form| %>
    <%= form.label :name, "Name:" %>
    <%= collection_select :user, :name, User.all, :name, :name %>
    <%= form.label :password, "Password:" %>
    <%= form.password_field :password %>
    <%= form.submit "Sign In" %>
  <% end %>


Or <%= link_to 'Sign up', new_user_path %>

