<%= form_for @user do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <% if false %>
        <div class="field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
        </div>
    <% end %>
    <div class="field">
      <%= f.label :height, 'Height (in inches)' %>
      <%= f.number_field :height %>
    </div>
    <div class="field">
      <%= f.label :happiness, 'How happy are you? (1-5 scale)' %>
      <%= f.number_field :happiness %>
    </div>
    <div class="field">
      <%= f.label :nausea, 'How nauseous are you? (1-5 scale)' %>
      <%= f.number_field :nausea %>
    </div>
    <div class="field">
      <%= f.label :tickets, 'How many tickets you have?' %>
      <%= f.number_field :tickets %>
    </div>
    <div class="field">
      <%= f.label :admin, 'Admin?' %>
      <%= f.check_box :admin, {}, true, false %>
    </div>
  
    <div class="field">
        <%= f.submit %>
       
    </div>
  <% end %>
  